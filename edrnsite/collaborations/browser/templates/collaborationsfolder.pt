<html xmlns='http://www.w3.org/1999/xhtml'
    xml:lang='en'
    lang='en'
    xmlns:tal='http://xml.zope.org/namespaces/tal'
    xmlns:metal='http://xml.zope.org/namespaces/metal'
    xmlns:i18n='http://xml.zope.org/namespaces/i18n'
    metal:use-macro='context/main_template/macros/master'
    i18n:domain='edrnsite.collaborations'>
    <head>
        <title>Collaborations Folder</title>
    </head>
    <body>
        <metal:content-core fill-slot='content-core' tal:define='haveGroups view/haveGroups'>
            <h2 i18n:translate='edrnsiteCollaborationsHeadingGroups'>Groups</h2>
            <p tal:condition='not:haveGroups' class='discreet' i18n:translate='edrnsiteCollaborationsAdmonitionNoGroups'>
                There are no collaborative groups in this folder.
            </p>
            <ul tal:condition='haveGroups'>
                <li tal:repeat='group view/groups'>
                    <a href='#' title='One of the swankiest groups ever.' tal:content='group/title'
                        tal:attributes='href group/url; title group/description'>
                        The Rat Pack
                    </a>
                </li>
            </ul>
        </metal:content-core>
        <!-- <metal:css fill-slot='css_slot'>
            <style type='text/css' media='all'
                tal:content="string:@import url(${context/++resource++ipdasite-services.css});"></style>
        </metal:css> -->
    </body>
</html>
